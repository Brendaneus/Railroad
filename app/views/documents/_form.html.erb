<%= form_for [@article, @document] do |f| %>

	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<%= render 'upload', document: @document if @document.persisted? %>

	<% if @document.upload.attached? %>

		<div class="check_box">
			<%= label_tag :purge_upload %>
			<%= check_box_tag :purge_upload %>
		</div>

	<% end %>

	<div>
		<%= f.label :upload %>
		<%= f.file_field :upload, direct_upload: true %>
	</div>

	<div>
		<%= f.label :content %>
		<%= f.text_area :content %>
	</div>

	<%= f.submit %>

<% end %>