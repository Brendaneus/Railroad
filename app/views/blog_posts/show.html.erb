<% if admin_user? %>

	<nav class="admin post_control">
		<%= link_to "Edit Post", edit_blog_post_path( @blog_post ) %>
		<%= link_to "Delete Post", @blog_post, method: :delete, data: { confirm: 'Really delete this post?'} %>
		<%= link_to "New Document", new_article_document_path( @blog_post ) %>
	</nav>

<% end %>

<h1><%= @blog_post.title %></h1>

<h2><%= @blog_post.subtitle %></h2>

<p><%= simple_format @blog_post.content %></p>

<h4 class="subtle">
	Posted on <%= @blog_post.created_at.to_date %>.
	
	<% if @blog_post.edited? %>

		Last edited on <%= @blog_post.updated_at.to_date %>.

	<% end %>
</h4>

<%= render @documents %>

<%= render 'comments/form', comment: @new_comment, form_url: blog_post_comments_path(@blog_post) %>

<%= render @comments %>