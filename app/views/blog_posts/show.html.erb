<% provide( :post_type, "BlogPost" ) %>

<% if admin_user? %>
	<nav class="admin post_control">
		<%= link_to "Edit Post", edit_blog_post_path( @blog_post ) %>
		<%= link_to "Delete Post", blog_post_path( @blog_post ), method: :delete, data: { confirm: 'Really delete this post?'} %>
	</nav>
<% end %>
<h1><%= @blog_post.title %></h1>
<h2><%= @blog_post.subtitle %></h2>
<p><%= @blog_post.content %></p>
<% if @blog_post.edited? %>
	<h4 class="subtle">This post has been edited.</h4>
<% end %>

<%= render 'comments/form' %>

<%= render 'comments' %>