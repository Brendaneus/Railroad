<% if admin_user? %>
	<nav class="admin post_control">
		<%= link_to "Edit Post", edit_archiving_path( @archiving ) %>
		<%= link_to "Delete Post", archiving_path( @archiving ), method: :delete, data: { confirm: 'Really delete this post?'} %>
		<%= link_to "New Document", new_archiving_document_path( @archiving ) %>
	</nav>
<% end %>

<h1><%= @archiving.name %></h1>

<p><%= @archiving.content %></p>

<% @documents.each do |document| %>
	<div class="container">
		<h2><%= link_to document.name, archiving_document_path(@archiving, document) %></h2>
	</div>
<% end %>