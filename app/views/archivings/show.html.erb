<% if admin_user? %>

	<div class="admin control">
		<%= link_to "Edit Archiving", edit_archiving_path( @archiving ) if untrashed_user? %>
		
		<%= link_to "Trash Archiving", trash_archiving_path( @archiving ) unless @archiving.trashed? %>
		
		<%= link_to "Restore Archiving", untrash_archiving_path( @archiving ) if @archiving.trashed? %>

		<%= link_to "Delete Archiving", @archiving, method: :delete, data: { confirm: 'Really delete this post?'} if @archiving.trashed? && untrashed_user? %>

		<%= link_to "New Document", new_archiving_document_path( @archiving ) if untrashed_user? %>
	</div>

<% end %>

<main>
	<%= render 'heading' %>

	<p><%= simple_format @archiving.content %></p>

	<%= render 'shared/timestamps', object: @archiving %>

	<%= render @documents %>
</main>