<div class="<%= container_class(forum_post) %>">
	<h2><%= link_to forum_post.title, forum_post %></h2>

	<% if forum_post.comments.any? %>
	 	
	 	<%= tag.h4 (forum_post.comments.length).to_s + " Comment".pluralize(forum_post.comments.length), class: 'subtle' %>

	 <% end %>

	<%= render 'shared/timestamps', object: forum_post, owned: true %>
</div>